trigger:
- master

resources:
- repo: self 

variables:
  ImageName: 'shruti1402/my-flask-app-new175'
#variables:
#  tag: '$(Build.BuildId)'

pr:
- "*"


stages:

- stage: Deploy
  displayName: Deploy to EC2
  jobs:
  - job: Deploy
    displayName: Deploy to EC2
    steps:
    - script: 
        ssh -o "StrictHostKeyChecking no" -i "$SSH_PRIVATE_KEY" ubuntu@$EC2_PUBLIC_IP "
        docker login;
        docker pull shruti1402/my-flask-app-new175;
        docker run -d -p 8080:8000 shruti1402/my-flask-app-new175"